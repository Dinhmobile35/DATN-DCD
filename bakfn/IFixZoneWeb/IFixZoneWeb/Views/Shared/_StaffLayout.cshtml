@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Http

@{
    var name = Http.HttpContext?.Session.GetString("FullName") ?? "Staff";
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string Active(string c) => currentController == c ? "active" : "";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - iFixZone Staff</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #f3f4f6;
        }

        .sidebar {
            width: 240px;
            background: #0f172a;
            color: #e5e7eb;
            position: fixed;
            height: 100%;
        }

            .sidebar a {
                display: flex;
                gap: 10px;
                padding: 12px 20px;
                color: #cbd5e1;
                text-decoration: none;
            }

                .sidebar a.active, .sidebar a:hover {
                    background: #1e40af;
                    color: #fff;
                }

        .main {
            margin-left: 240px;
        }

        .topbar {
            background: #fff;
            padding: 15px 25px;
            border-bottom: 1px solid #e5e7eb;
            display: flex;
            justify-content: flex-end;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h5 class="p-3 fw-bold text-warning">
            <i class="fa fa-user-gear"></i> Staff Panel
        </h5>

        <a asp-controller="Staff"
           asp-action="Dashboard"
           class="@Active("Staff")">
            <i class="fa fa-chart-line"></i> Dashboard
        </a>

        <a asp-controller="OrderStaff"
           asp-action="Index"
           class="@Active("OrderStaff")">
            <i class="fa fa-cart-shopping"></i> Xử lý đơn hàng
        </a>

        <a asp-controller="ProductStaff"
           asp-action="Index"
           class="@Active("ProductStaff")">
            <i class="fa fa-box"></i> Xem sản phẩm
        </a>

        <a asp-controller="CategoryStaff"
           asp-action="Index"
           class="@Active("CategoryStaff")">
            <i class="fa fa-folder-tree"></i> Quản lý danh mục
        </a>

        <hr class="text-secondary">

        <a asp-controller="Account"
           asp-action="Logout"
           class="text-danger">
            <i class="fa fa-right-from-bracket"></i> Đăng xuất
        </a>
    </div>


    <div class="main">
        <div class="topbar">
            <i class="fa fa-user-circle me-2"></i> Xin chào, <b>@name</b>
        </div>

        <div class="p-4">
            @RenderBody()
        </div>
    </div>

</body>
</html>
