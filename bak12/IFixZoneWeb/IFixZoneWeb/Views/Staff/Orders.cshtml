@model List<IFixZoneWeb.Models.Entities.Order>
@{
    Layout = "_StaffLayout";
    ViewData["Title"] = "Quản lý đơn hàng";
    var currentStatus = ViewBag.CurrentStatus as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold d-flex align-items-center gap-2">
        <i class="fa-solid fa-boxes-packing text-primary"></i>
        Quản lý đơn hàng
    </h3>
    <div class="badge bg-primary fs-6">
        Tổng: @Model.Count đơn
    </div>
</div>

<!-- ================= FILTER ================= -->
<div class="card shadow-sm mb-4">
    <div class="card-body py-2">
        <div class="nav nav-pills gap-2">
            <a href="/Staff/Orders?status=All"
               class="nav-link @(currentStatus == "All" ? "active" : "")">
                Tất cả
            </a>
            <a href="/Staff/Orders?status=Mới"
               class="nav-link @(currentStatus == "Mới" ? "active" : "")">
                Mới
            </a>
             <a href="/Staff/Orders?status=Đang chuẩn bị"
               class="nav-link @(currentStatus == "Đang chuẩn bị" ? "active" : "")">
                Đang chuẩn bị
            </a>
            <a href="/Staff/Orders?status=Đang giao"
               class="nav-link @(currentStatus == "Đang giao" ? "active" : "")">
                Đang giao
            </a>
            <a href="/Staff/Orders?status=Hoàn thành"
               class="nav-link @(currentStatus == "Hoàn thành" ? "active" : "")">
                Hoàn thành
            </a>
            <a href="/Staff/Orders?status=Đã hủy"
               class="nav-link @(currentStatus == "Đã hủy" ? "active" : "")">
                Đã hủy
            </a>
        </div>
    </div>
</div>

<!-- ================= LIST ================= -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="fa-solid fa-box-open fa-3x mb-3 opacity-50"></i>
                <p>Không có đơn hàng nào.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var o in Model)
                        {
                            <tr>
                                <td class="fw-bold text-primary">@o.OrderCode</td>
                                <td>
                                    <div class="fw-semibold">@o.RecipientName</div>
                                    <div class="small text-muted">@o.RecipientPhone</div>
                                </td>
                                <td>@o.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="fw-bold text-danger">@o.TotalAmount?.ToString("N0") ₫</td>
                                <td>
                                    @{
                                        var badge = "secondary";
                                        if (o.Status == "Mới") badge = "info";
                                        else if (o.Status == "Đang chuẩn bị") badge = "warning";
                                        else if (o.Status == "Đang giao") badge = "primary";
                                        else if (o.Status == "Hoàn thành") badge = "success";
                                        else if (o.Status == "Đã hủy") badge = "danger";
                                    }
                                    <span class="badge bg-@badge">@o.Status</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@o.OrderId" class="btn btn-sm btn-outline-primary">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        <a asp-action="Print" asp-route-id="@o.OrderId" target="_blank" class="btn btn-sm btn-outline-success">
                                            <i class="fa-solid fa-print"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
