@model IFixZoneWeb.Models.Entities.Order
@{
    Layout = "_StaffLayout";
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.OrderCode}";
}

<div class="container-fluid py-4">
    <h2 class="mb-4 fw-bold text-primary">
        <i class="fa-solid fa-file-invoice me-2"></i>
        Chi tiết đơn hàng #@Model.OrderCode
    </h2>

    <div class="row g-4">
        <!-- CUSTOMER INFO -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold">
                    <i class="fa-solid fa-user me-2 text-info"></i>
                    Thông tin người nhận
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Người nhận:</strong> @Model.RecipientName</p>
                    <p class="mb-2"><strong>SĐT:</strong> @Model.RecipientPhone</p>
                    <p class="mb-2"><strong>Địa chỉ:</strong> @Model.RecipientAddress</p>
                    <p class="mb-0"><strong>Ngày đặt:</strong> @(Model.OrderDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</p>
                </div>
            </div>
        </div>

        <!-- STATUS UPDATE -->
        <div class="col-md-6">
             <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold">
                    <i class="fa-solid fa-pen-to-square me-2 text-warning"></i>
                    Cập nhật trạng thái
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        Trạng thái hiện tại: 
                        <span class="badge bg-@GetStatusColor(Model.Status) fs-6">@Model.Status</span>
                    </p>

                    <form asp-action="UpdateStatus" method="post" class="d-flex gap-2">
                        <input type="hidden" name="id" value="@Model.OrderId" />
                        
                        <select name="newStatus" class="form-select">
                             @foreach (var status in new[] { "Mới", "Xác nhận", "Đang chuẩn bị", "Đang giao", "Hoàn thành", "Đã hủy" })
                            {
                                <option value="@status" selected="@(status == Model.Status)">@status</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-primary text-nowrap">
                            <i class="fa-solid fa-save me-1"></i> Lưu
                        </button>
                    </form>
                    
                    <div class="d-grid mt-3">
                        <a asp-action="Print" asp-route-id="@Model.OrderId" target="_blank" class="btn btn-outline-success">
                            <i class="fa-solid fa-print me-2"></i> In đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ORDER ITEMS -->
    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-light fw-bold">
             <i class="fa-solid fa-box-open me-2 text-success"></i>
             Danh sách sản phẩm
        </div>
        <div class="card-body p-0">
             <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Sản phẩm</th>
                        <th class="text-end">Đơn giá</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-end">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@item.Product?.ProductName</div>
                            </td>
                            <td class="text-end">@item.UnitPrice.ToString("N0") ₫</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end fw-bold">@((item.Quantity * item.UnitPrice).ToString("N0")) ₫</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                        <td class="text-end fw-bold text-danger fs-5">
                            @(Model.TotalAmount?.ToString("N0") ?? "0") ₫
                        </td>
                    </tr>
                </tfoot>
             </table>
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-action="Orders" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrow-left me-2"></i> Quay lại danh sách
        </a>
    </div>

</div>

@functions {
    string GetStatusColor(string? status) => status switch
    {
        "Mới" => "info",
        "Xác nhận" => "primary",
        "Đang chuẩn bị" => "warning",
        "Đang giao" => "primary",
        "Hoàn thành" => "success",
        "Đã hủy" => "danger",
        _ => "secondary"
    };
}
