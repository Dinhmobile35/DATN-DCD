@model IFixZoneWeb.Models.Entities.User
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-md-11">

            <div class="profile-card">

                <!-- HEADER -->
                <div class="profile-header">
                    <div class="avatar">
                        <i class="fa-solid fa-user"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-1">
                            @(string.IsNullOrEmpty(Model.FullName)
                                                        ? Model.Username
                                                        : Model.FullName)
                        </h2>

                        @if (Model.IsActive ?? false)
                        {
                            <span class="status active">Đang hoạt động</span>
                        }
                        else
                        {
                            <span class="status inactive">Đã khóa</span>
                        }
                    </div>
                </div>

                <!-- BODY -->
                <div class="profile-body">
                    <div class="row">

                        <!-- LEFT -->
                        <div class="col-md-5 mb-4 mb-md-0">
                            <ul class="info-list">
                                <li>
                                    <span>Tên đăng nhập</span>
                                    <strong>@Model.Username</strong>
                                </li>
                                <li>
                                    <span>Email</span>
                                    <strong>@Model.Email</strong>
                                </li>
                                <li>
                                    <span>Ngày tạo</span>
                                    <strong>
                                        @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                                    </strong>
                                </li>
                            </ul>
                        </div>

                        <!-- RIGHT -->
                        <div class="col-md-7">
                            <ul class="info-list">
                                <li>
                                    <span>Họ tên</span>
                                    <strong>@Model.FullName</strong>
                                </li>
                                <li>
                                    <span>Số điện thoại</span>
                                    <strong>@Model.Phone</strong>
                                </li>
                                <li>
                                    <span>Địa chỉ</span>
                                    <strong>@Model.Address</strong>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- ACTION -->
                    <div class="action-bar">
                        <a asp-controller="Account"
                           asp-action="EditProfile"
                           class="btn btn-primary">
                            <i class="fa-solid fa-pen me-2"></i>Chỉnh sửa hồ sơ
                        </a>

                        <a asp-controller="Account"
                           asp-action="ChangePassword"
                           class="btn btn-outline-warning">
                            <i class="fa-solid fa-key me-2"></i>Đổi mật khẩu
                        </a>

                        <a asp-controller="Home"
                           asp-action="Index"
                           class="btn btn-outline-secondary">
                            <i class="fa-solid fa-home me-2"></i>Trang chủ
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* ===== CARD ===== */
    .profile-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 18px 40px rgba(0,0,0,.12);
        overflow: hidden;
    }

    /* ===== HEADER ===== */
    .profile-header {
        display: flex;
        align-items: center;
        gap: 18px;
        padding: 32px;
        background: linear-gradient(135deg, #d70018, #d70018);
        color: #fff;
    }

        .profile-header .avatar {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: rgba(255,255,255,.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 30px;
        }

    /* STATUS */
    .status {
        display: inline-block;
        margin-top: 4px;
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 13px;
        font-weight: 600;
    }

        .status.active {
            background: #22c55e;
            color: #fff;
        }

        .status.inactive {
            background: #ef4444;
            color: #fff;
        }

    /* ===== BODY ===== */
    .profile-body {
        padding: 32px;
    }

    /* INFO LIST */
    .info-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .info-list li {
            padding: 12px 0;
            border-bottom: 1px dashed #e5e7eb;
        }

            .info-list li:last-child {
                border-bottom: none;
            }

        .info-list span {
            display: block;
            font-size: 13px;
            color: #6b7280;
            margin-bottom: 2px;
        }

        .info-list strong {
            font-size: 15px;
            font-weight: 600;
            color: #111827;
        }

    /* ACTION BAR */
    .action-bar {
        display: flex;
        gap: 14px;
        margin-top: 32px;
        flex-wrap: wrap;
    }

    /* BUTTON */
    .btn {
        border-radius: 12px;
        font-weight: 600;
        padding: 10px 18px;
    }

    .btn-primary {
        background: #2563eb;
        border-color: #2563eb;
    }

        .btn-primary:hover {
            background: #1e40af;
            border-color: #1e40af;
        }
</style>
