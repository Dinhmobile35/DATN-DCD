@using IFixZoneWeb.Models.Entities
@model IEnumerable<IFixZoneWeb.Models.Entities.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}
<div class="container py-5">
    <h2 class="mb-5 text-center fw-bold text-primary display-6">
        <i class="fa-solid fa-boxes-stacked me-3"></i>Danh sách sản phẩm
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fa-solid fa-inbox fa-5x text-muted mb-4"></i>
            <p class="text-muted fs-4">Chưa có sản phẩm nào</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="ifix-card product-card h-100 d-flex flex-column rounded-4 overflow-hidden shadow-sm">
                        <div class="image-wrapper">
                            <img src="/images/products/@(item.MainImage ?? "no-image-placeholder.jpg")"
                                 class="product-thumb product-zoom"
                                 alt="@item.ProductName"
                                 loading="lazy" />
                        </div>
                        <div class="card-content p-3 d-flex flex-column flex-grow-1">
                            <h6 class="fw-bold mb-2 text-truncate" title="@item.ProductName">
                                @item.ProductName
                            </h6>
                            <div class="mt-auto">
                                <div class="price fw-bold mb-3">
                                    @item.Price.ToString("N0") đ
                                </div>
                                <div class="d-flex gap-2 flex-column flex-sm-row">
                                    <a asp-controller="Product"
                                       asp-action="Details"
                                       asp-route-id="@item.ProductId"
                                       class="btn btn-sm btn-outline-primary flex-grow-1">
                                        Chi tiết
                                    </a>
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="m-0 add-to-cart-form">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-sm btn-success flex-grow-1">
                                            <i class="fa-solid fa-cart-plus me-1"></i>Thêm
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- CSS (giữ nguyên như trang chủ, thêm zoom) -->
<style>
    .ifix-card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 14px;
        overflow: hidden;
        transition: all 0.25s ease;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }

        .ifix-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 32px rgba(0,0,0,0.1);
            border-color: #3b82f6;
        }

    .cat-card {
        padding: 1.5rem;
        min-height: 140px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .cat-card.active {
            border: 2px solid #2563eb;
            background-color: #f0f7ff;
        }

    .product-thumb {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: contain;
        padding: 14px;
        background: #f8fafc;
        transition: transform 0.4s ease; /* Hiệu ứng zoom mượt */
    }

    .product-card:hover .product-thumb {
        transform: scale(1.15); /* Zoom khi hover */
    }

    .price {
        font-size: 1.32rem;
        color: #e11d48;
    }

    .price-recommended {
        color: #15803d;
    }

    .image-wrapper {
        background: #f9fafb;
        border-bottom: 1px solid #e5e7eb;
    }

    .card-content {
        padding: 1rem 1.25rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    /* Responsive adjustments */
    @@media (max-width: 576px) {
        .ifix-card {
            font-size: 0.95rem;
        }

        .product-card h6 {
            font-size: 0.98rem;
            line-height: 1.3;
        }

        .price {
            font-size: 1.18rem;
        }

        .cat-card {
            min-height: 120px;
            padding: 1rem;
        }
    }

    @@media (max-width: 400px) {
        .d-flex.gap-2 {
            flex-direction: column;
            gap: 0.5rem !important;
        }
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.add-to-cart-form').forEach(form => {
                form.addEventListener('submit', function (e) {
                    e.preventDefault(); // Ngăn reload trang
                    const formData = new FormData(form);
                    fetch('/Cart/AddToCart', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message); // Thông báo "Đã thêm vào giỏ hàng"
                        } else {
                            alert(data.message || 'Có lỗi xảy ra khi thêm sản phẩm');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Lỗi kết nối server');
                    });
                });
            });
        });
    </script>
}