@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    var fullname = HttpContextAccessor.HttpContext?.Session.GetString("FullName");
    var displayName = string.IsNullOrEmpty(fullname) ? username : fullname;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iFixZone</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- NAVBAR STICKY -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg sticky-top">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand fw-bold fs-4 d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-screwdriver-wrench me-2 text-warning"></i>
                iFixZone
            </a>

            <!-- Toggler for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu -->
            <div class="collapse navbar-collapse" id="mainNavbar">
                <!-- Search Bar -->
                <form class="d-flex mx-auto my-2 my-lg-0 w-50" asp-controller="Product" asp-action="Index" method="get">
                    <div class="input-group input-group-lg">
                        <input class="form-control border-0 rounded-pill shadow-sm"
                               name="searchString"
                               value="@ViewData["CurrentFilter"]"
                               placeholder="Tìm linh kiện, IC, main, pin, model..."
                               aria-label="Search" />
                        <button class="btn btn-warning rounded-pill ms-2 shadow-sm" type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </form>

                <!-- Right Menu -->
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-house me-1"></i>Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-controller="Product" asp-action="Index">
                            <i class="fa-solid fa-shop me-1"></i>Sản phẩm
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-controller="Cart" asp-action="Index">
                            <i class="fa-solid fa-cart-shopping me-1"></i>Giỏ hàng
                        </a>
                    </li>

                    @if (string.IsNullOrEmpty(username))
                    {
                        <!-- Chưa đăng nhập -->
                        <li class="nav-item ms-3">
                            <a class="btn btn-outline-light px-4 fw-bold" asp-controller="Account" asp-action="Login">
                                <i class="fa-solid fa-right-to-bracket me-1"></i>Đăng nhập
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- Đã đăng nhập -->
                        <li class="nav-item dropdown ms-3">
                            <a class="nav-link dropdown-toggle d-flex align-items-center text-light fw-bold" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-circle-user fa-xl me-2 text-warning"></i>
                                @displayName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="fa-solid fa-user me-2"></i>Hồ sơ cá nhân
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Order" asp-action="History">
                                        <i class="fa-solid fa-receipt me-2"></i>Đơn hàng của tôi
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="fa-solid fa-right-from-bracket me-2"></i>Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main role="main" class="pb-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white py-5 mt-auto">
        <div class="container">
            <div class="row g-4">
                <!-- Cột 1: Thông tin công ty -->
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fa-solid fa-screwdriver-wrench text-warning me-2"></i>
                        iFixZone
                    </h5>
                    <p class="text-secondary mb-2">
                        Cung cấp linh kiện chất lượng cao, dịch vụ sửa chữa chuyên nghiệp.
                    </p>
                </div>

                <!-- Cột 2: Liên hệ -->
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Liên hệ</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fa-solid fa-map-marker-alt me-2 text-warning"></i>
                            123 Đường Công Nghệ, Quận 1, TP.HCM
                        </li>
                        <li class="mb-2">
                            <i class="fa-solid fa-phone-volume me-2 text-warning"></i>
                            Hotline: 1900 1234
                        </li>
                        <li>
                            <i class="fa-solid fa-envelope me-2 text-warning"></i>
                            support@ifxzone.vn
                        </li>
                    </ul>
                </div>

                <!-- Cột 3: Về chúng tôi / Chính sách -->
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Hỗ trợ khách hàng</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Chính sách đổi trả</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Chính sách bảo hành</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Hướng dẫn mua hàng</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Liên hệ hỗ trợ</a></li>
                    </ul>
                </div>
            </div>

            <!-- Copyright & Social -->
            <hr class="my-4 opacity-25" />
            <div class="text-center">
                <p class="mb-2">
                    © 2025 iFixZone — Linh kiện • Sửa chữa • Công nghệ. All Rights Reserved.
                </p>
                <div class="d-flex justify-content-center gap-4">
                    <a href="#" class="text-white fs-4"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="text-white fs-4"><i class="fa-brands fa-youtube"></i></a>
                    <a href="#" class="text-white fs-4"><i class="fa-brands fa-tiktok"></i></a>
                    <a href="#" class="text-white fs-4"><i class="fa-brands fa-zalo"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <button id="backToTop" class="btn btn-primary btn-lg rounded-circle shadow-lg position-fixed" style="bottom: 30px; right: 30px; display: none;">
        <i class="fa-solid fa-arrow-up"></i>
    </button>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Back to Top
        const backToTop = document.getElementById('backToTop');
        window.addEventListener('scroll', () => {
            backToTop.style.display = window.scrollY > 300 ? 'block' : 'none';
        });
        backToTop.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>