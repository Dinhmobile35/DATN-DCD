@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="fw-bold mb-4">
    <i class="fa-solid fa-gauge"></i> Bảng điều khiển quản trị
</h2>

<div class="row">

    <div class="col-md-3">
        <div class="card bg-primary text-white shadow p-3">
            <h5>Người dùng</h5>
            <h2>@Model.Users</h2>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white shadow p-3">
            <h5>Sản phẩm</h5>
            <h2>@Model.Products</h2>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-dark shadow p-3">
            <h5>Đơn hàng</h5>
            <h2>@Model.Orders</h2>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-danger text-white shadow p-3">
            <h5>Doanh thu</h5>
            <h2>@String.Format("{0:N0} đ", Model.Revenue)</h2>
        </div>
    </div>

</div>

<hr />

<a class="btn btn-dark mt-3" asp-controller="Home" asp-action="Index">
    <i class="fa-solid fa-arrow-left"></i> Quay lại trang chủ
</a>
