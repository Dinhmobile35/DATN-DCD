@{
    ViewData["Title"] = "Trang chủ - iFixZone";
}

<!-- HERO BANNER -->
<section class="bg-dark text-white text-center py-5">
    <h1 class="fw-bold">iFixZone — Linh kiện & Giải pháp sửa chữa</h1>
    <p class="fs-5">IC • Mainboard • Pin • Dụng cụ sửa chữa • Laptop • Điện thoại</p>

    <div class="mt-3 w-50 mx-auto">
        <input class="form-control form-control-lg"
               placeholder="Tìm kiếm sản phẩm, mã IC, mainboard, linh kiện...">
    </div>
</section>


<div class="container py-5">

    <!-- FEATURED CATEGORIES -->
    <h3 class="fw-bold mb-3">Danh mục nổi bật</h3>

    <div class="row g-3">

        <div class="col-6 col-md-3">
            <div class="card text-center shadow-sm p-3 category-card">
                <i class="fa-solid fa-mobile-screen fa-2x mb-2 text-primary"></i>
                <h6>Linh kiện điện thoại</h6>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-center shadow-sm p-3 category-card">
                <i class="fa-solid fa-laptop fa-2x mb-2 text-success"></i>
                <h6>Linh kiện laptop</h6>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-center shadow-sm p-3 category-card">
                <i class="fa-solid fa-microchip fa-2x mb-2 text-warning"></i>
                <h6>IC – Chip</h6>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-center shadow-sm p-3 category-card">
                <i class="fa-solid fa-screwdriver-wrench fa-2x mb-2 text-danger"></i>
                <h6>Dụng cụ sửa chữa</h6>
            </div>
        </div>

    </div>


    <!-- FEATURED PRODUCTS -->
    <div class="d-flex justify-content-between align-items-center mt-5">
        <h3 class="fw-bold">Sản phẩm nổi bật</h3>
        <a href="/Product" class="text-primary">Xem tất cả →</a>
    </div>

    <div class="row mt-2 g-3">

        <!-- SAMPLE ITEM (sau này load từ DB) -->
        <div class="col-6 col-md-3">
            <div class="card product-card shadow-sm p-2">

                <img src="/img/sample1.jpg" class="card-img-top rounded" />

                <div class="card-body">
                    <h6 class="fw-bold">Mainboard iPhone 11</h6>
                    <p class="text-danger fw-bold mb-1">2,500,000₫</p>

                    <a href="#" class="btn btn-sm btn-primary w-100">
                        Xem chi tiết
                    </a>
                </div>

            </div>
        </div>

    </div>


    <!-- REPAIR TIPS -->
    <h3 class="fw-bold mt-5">Hướng dẫn sửa chữa & Tips kỹ thuật</h3>

    <div class="row g-3">

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h6>Cách thay IC nguồn iPhone X</h6>
                <p>Hướng dẫn chi tiết từng bước dành cho kỹ thuật viên…</p>
                <a href="#" class="text-primary">Xem bài viết</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h6>Phân biệt IC zin & linh kiện lô</h6>
                <p>Những lưu ý quan trọng khi chọn linh kiện thay thế…</p>
                <a href="#" class="text-primary">Xem chi tiết</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h6>Kinh nghiệm đóng chip BGA</h6>
                <p>Những lỗi thường gặp & cách xử lý hiệu quả…</p>
                <a href="#" class="text-primary">Đọc ngay</a>
            </div>
        </div>

    </div>

</div>


<!-- SMALL CSS TWEAK -->
<style>
    .category-card:hover,
    .product-card:hover {
        transform: translateY(-3px);
        transition: .2s;
        cursor: pointer;
    }
</style>
