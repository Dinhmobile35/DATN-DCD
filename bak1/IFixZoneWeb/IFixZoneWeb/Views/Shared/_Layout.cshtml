@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    var fullname = HttpContextAccessor.HttpContext?.Session.GetString("FullName");
    var displayName = string.IsNullOrEmpty(fullname) ? username : fullname;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iFixZone</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">

            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-screwdriver-wrench"></i> iFixZone
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#mainMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainMenu">

                <!-- Search -->
                <form class="d-flex w-50 mx-auto">
                    <input class="form-control" placeholder="Tìm linh kiện, IC, main, pin...">
                </form>

                <!-- RIGHT MENU -->
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-house"></i> Trang chủ
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index">
                            <i class="fa-solid fa-shop"></i> Sản phẩm
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cart" asp-action="Index">
                            <i class="fa-solid fa-cart-shopping"></i> Giỏ hàng
                        </a>
                    </li>

                    @* =======================
                       CHƯA ĐĂNG NHẬP
                    ======================= *@
                    @if (string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item">
                            <a class="nav-link fw-bold"
                               asp-controller="Account" asp-action="Login">
                                <i class="fa-solid fa-user"></i> Đăng nhập
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold"
                               asp-controller="Account" asp-action="Register">
                                <i class="fa-solid fa-user-plus"></i> Đăng ký
                            </a>
                        </li>
                    }
                    else
                    {
                        @* =======================
                           ĐÃ ĐĂNG NHẬP
                        ======================= *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-info fw-bold"
                               data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user-circle"></i> @displayName
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">

                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Account" asp-action="Profile">
                                        Hồ sơ cá nhân
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Order" asp-action="History">
                                        Đơn hàng của tôi
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <li>
                                    <a class="dropdown-item text-danger"
                                       asp-controller="Account" asp-action="Logout">
                                        Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <!-- MAIN -->
    <div class="container py-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        © 2025 iFixZone — Linh kiện • Sửa chữa • Công nghệ
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
