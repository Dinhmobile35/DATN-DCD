@model IFixZoneWeb.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h2 class="mb-0 fw-bold">Đổi mật khẩu</h2>
                    <p class="mb-0 mt-2 text-white-75">Nhập thông tin để đổi mật khẩu mới</p>
                </div>

                <div class="card-body p-5">
                    <form asp-action="ChangePassword" method="post">
                        <div class="mb-4">
                            <label asp-for="CurrentPassword" class="form-label fw-bold">Mật khẩu hiện tại</label>
                            <input asp-for="CurrentPassword" class="form-control form-control-lg" type="password" required />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label fw-bold">Mật khẩu mới</label>
                            <input asp-for="NewPassword" class="form-control form-control-lg" type="password" required />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">Xác nhận mật khẩu mới</label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-danger btn-lg fw-bold">
                                <i class="fa-solid fa-key me-2"></i>Đổi mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}