@model IFixZoneWeb.Models.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0 fw-bold">Chỉnh sửa hồ sơ cá nhân</h2>
                    <p class="mb-0 mt-2 text-white-75">Cập nhật thông tin của bạn</p>
                </div>

                <div class="card-body p-5">
                    <form asp-action="EditProfile" method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Thông tin cá nhân -->
                        <div class="mb-4">
                            <label asp-for="FullName" class="form-label fw-bold">Họ và tên</label>
                            <input asp-for="FullName" class="form-control form-control-lg" required autofocus />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control form-control-lg" required pattern="^0[0-9]{8,9}$" title="Số điện thoại bắt đầu bằng 0 và có 9-10 số" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-5">
                            <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                            <textarea asp-for="Address" class="form-control form-control-lg" rows="3" required></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Nút lưu -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg fw-bold">
                                <i class="fa-solid fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center text-muted py-3">
                    <small>Thông tin được cập nhật sẽ áp dụng ngay cho tài khoản của bạn.</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}