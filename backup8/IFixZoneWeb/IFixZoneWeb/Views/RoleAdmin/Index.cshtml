@model IEnumerable<IFixZoneWeb.Models.Entities.Role>
@{
    Layout = "_AdminLayout";
}

<h4 class="fw-bold mb-3">Quản lý vai trò</h4>

<a class="btn btn-success mb-2" asp-action="Edit">
    + Thêm vai trò
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên quyền</th>
            <th width="150"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.RoleId</td>
                <td>@r.RoleName</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@r.RoleId">Sửa</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@r.RoleId"
                       onclick="return confirm('Xóa vai trò này?');">
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
