@model IEnumerable<IFixZoneWeb.Models.Entities.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container py-5">
    <h2 class="mb-5 text-center fw-bold text-primary display-6">
        <i class="fa-solid fa-boxes-stacked me-3"></i>Danh sách sản phẩm
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fa-solid fa-inbox fa-5x text-muted mb-4"></i>
            <p class="text-muted fs-4">Chưa có sản phẩm nào</p>
        </div>
    }
    else
    {
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <a asp-controller="Product"
                       asp-action="Details"
                       asp-route-id="@item.ProductId"
                       class="ifix-card product-card">

                        <div class="image-wrapper">
                            <img src="/images/products/@(item.MainImage ?? "no-image-placeholder.jpg")"
                                 class="product-thumb"
                                 alt="@item.ProductName"
                                 loading="lazy" />

                            @if (item.Stock > 0)
                            {
                                <span class="badge-stock in-stock">
                                    <i class="fa-solid fa-check"></i> Còn hàng
                                </span>
                            }
                            else
                            {
                                <span class="badge-stock out-stock">
                                    <i class="fa-solid fa-xmark"></i> Hết hàng
                                </span>
                            }
                        </div>

                        <div class="card-content">
                            <h6 class="product-name" title="@item.ProductName">
                                @item.ProductName
                            </h6>

                            <div class="price">
                                @item.Price.ToString("N0") đ
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>
<style>
    .ifix-card {
        display: block;
        background: #fff;
        border-radius: 16px;
        overflow: hidden;
        text-decoration: none;
        color: #111;
        border: 1px solid #e5e7eb;
        transition: all .25s ease;
        box-shadow: 0 4px 12px rgba(0,0,0,.04);
    }

        .ifix-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 16px 40px rgba(0,0,0,.12);
            border-color: #2563eb;
        }

    /* IMAGE */
    .image-wrapper {
        position: relative;
        background: #f8fafc;
        overflow: hidden;
    }

    .product-thumb {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: contain;
        padding: 16px;
        transition: transform .4s ease;
    }

    .ifix-card:hover .product-thumb {
        transform: scale(1.15);
    }

    /* BADGE */
    .badge-stock {
        position: absolute;
        top: 10px;
        left: 10px;
        font-size: 12px;
        padding: 4px 8px;
        border-radius: 999px;
        font-weight: 600;
    }

    .in-stock {
        background: #dcfce7;
        color: #166534;
    }

    .out-stock {
        background: #fee2e2;
        color: #991b1b;
    }

    /* CONTENT */
    .card-content {
        padding: 14px 16px 18px;
        text-align: center;
    }

    .product-name {
        font-size: 14.5px;
        font-weight: 600;
        line-height: 1.4;
        min-height: 40px;
        margin-bottom: 8px;
    }

    .price {
        font-size: 1.25rem;
        font-weight: 800;
        color: #e11d48;
    }

    /* MOBILE */
    @@media (max-width: 576px) {
        .product-name

    {
        font-size: 13.5px;
    }

    .price {
        font-size: 1.1rem;
    }

    }
</style>