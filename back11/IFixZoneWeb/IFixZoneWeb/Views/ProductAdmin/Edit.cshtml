@model IFixZoneWeb.Models.Entities.Product

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Model?.ProductId == 0 ? "Thêm sản phẩm" : "Sửa sản phẩm";
}

<!-- HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0">
        <i class="fa-solid fa-box-open me-2 text-primary"></i>
        @(Model?.ProductId == 0 ? "Thêm sản phẩm" : "Cập nhật sản phẩm")
    </h4>

    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
    </a>
</div>

<form method="post" enctype="multipart/form-data" class="card shadow-sm border-0">
    <div class="card-body">

        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="MainImage" />

        <!-- TÊN SẢN PHẨM -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Tên sản phẩm</label>
            <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm..." />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="row g-3">
            <!-- DANH MỤC -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Danh mục</label>
                <select asp-for="CategoryId"
                        class="form-select"
                        asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))">
                </select>
            </div>

            <!-- TRẠNG THÁI -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Trạng thái</label>
                <select asp-for="Status" class="form-select">
                    <option value="Active">Đang bán</option>
                    <option value="Inactive">Ngừng bán</option>
                    <option value="Hidden">Ẩn</option>
                </select>
            </div>
        </div>

        <div class="row g-3 mt-1">
            <!-- GIÁ -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Giá bán (VNĐ)</label>
                <input asp-for="Price" class="form-control" />
            </div>

            <!-- TỒN KHO -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Tồn kho</label>
                <input asp-for="Stock" class="form-control" />
            </div>
        </div>

        <!-- MÔ TẢ -->
        <div class="mt-3">
            <label class="form-label fw-semibold">Mô tả sản phẩm</label>
            <textarea asp-for="Description"
                      class="form-control"
                      rows="4"
                      placeholder="Mô tả chi tiết sản phẩm (phục vụ SEO, khách hàng, review)..."></textarea>
        </div>

        <!-- ẢNH HIỆN TẠI -->
        @if (!string.IsNullOrEmpty(Model?.MainImage))
        {
            <div class="mt-4">
                <label class="form-label fw-semibold">Ảnh hiện tại</label><br />
                <img src="~/images/products/@Model.MainImage"
                     class="rounded shadow-sm mb-2"
                     style="max-height:140px;object-fit:cover" />
            </div>
        }

        <!-- UPLOAD ẢNH -->
        <div class="mt-3">
            <label class="form-label fw-semibold">Chọn ảnh mới</label>
            <input type="file" name="imageFile" class="form-control" />
            <small class="text-muted">Hỗ trợ JPG, PNG, JPEG</small>
        </div>

    </div>

    <!-- ACTION BUTTON -->
    <div class="card-footer bg-light text-end">
        <button type="submit" class="btn btn-success px-4">
            <i class="fa-solid fa-save me-1"></i> Lưu
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            Hủy
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
