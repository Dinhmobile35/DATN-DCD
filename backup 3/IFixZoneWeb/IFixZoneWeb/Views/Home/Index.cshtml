@using IFixZoneWeb.Models.Entities
@model dynamic
@{
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
    var newProducts = ViewBag.NewProducts as List<Product> ?? new List<Product>();
    var recommended = ViewBag.Recommended as List<Product> ?? new List<Product>();
    var selectedCategoryId = ViewBag.CurrentCategory as int?;
}
<!-- DANH MỤC NỔI BẬT -->
<h3 class="fw-bold mb-4 text-center text-md-start">Danh mục nổi bật</h3>
<div class="row g-3 mb-5 justify-content-center">
    @foreach (var category in categories)
    {
        <div class="col-6 col-sm-4 col-md-3 col-lg-2">
            <a asp-controller="Product" asp-action="Index"
               asp-route-categoryId="@category.CategoryId"
               class="ifix-card cat-card text-decoration-none @(selectedCategoryId == category.CategoryId ? "active" : "")">
                <i class="fa-solid fa-layer-group fa-2x mb-3 text-primary"></i>
                <h6 class="fw-bold mb-0">@category.CategoryName</h6>
            </a>
        </div>
    }
</div>

<!-- SẢN PHẨM MỚI -->
<section class="mb-5">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h3 class="fw-bold mb-1">Sản phẩm mới</h3>
            <p class="text-muted mb-0 fs-6">Các linh kiện vừa được nhập kho</p>
        </div>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
    </div>

    @if (!newProducts.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="fa-solid fa-box-open fa-3x mb-3 opacity-50"></i>
            <p>Chưa có sản phẩm mới nào trong kho</p>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var product in newProducts)
            {
                <div class="col-6 col-md-6 col-lg-4 col-xl-3">
                    <div class="ifix-card product-card h-100 d-flex flex-column">
                        <div class="image-wrapper">
                            <img src="/images/products/@(product.MainImage ?? "no-image-placeholder.jpg")"
                                 class="product-thumb"
                                 alt="@product.ProductName"
                                 loading="lazy" />
                        </div>
                        <div class="card-content p-3 d-flex flex-column flex-grow-1">
                            <h6 class="fw-bold mb-2 text-truncate" title="@product.ProductName">
                                @product.ProductName
                            </h6>
                            <div class="mt-auto">
                                <div class="price fw-bold mb-3">
                                    @product.Price.ToString("N0") đ
                                </div>
                                <div class="d-flex gap-2 flex-column flex-sm-row">
                                    <a asp-controller="Product"
                                       asp-action="Details"
                                       asp-route-id="@product.ProductId"
                                       class="btn btn-sm btn-outline-primary flex-grow-1">
                                        Chi tiết
                                    </a>
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="m-0 add-to-cart-form">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-sm btn-success flex-grow-1">
                                            <i class="fa-solid fa-cart-plus me-1"></i>Thêm
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

<!-- SẢN PHẨM ĐỀ XUẤT -->
<section>
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h3 class="fw-bold mb-1">Sản phẩm đề xuất</h3>
            <p class="text-muted mb-0 fs-6">Lựa chọn được nhiều kỹ thuật viên tin dùng</p>
        </div>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
    </div>

    @if (!recommended.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="fa-solid fa-star-half-stroke fa-3x mb-3 opacity-50"></i>
            <p>Hiện chưa có sản phẩm đề xuất</p>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var product in recommended)
            {
                <div class="col-6 col-md-6 col-lg-4 col-xl-3">
                    <div class="ifix-card product-card h-100 d-flex flex-column">
                        <div class="image-wrapper">
                            <img src="/images/products/@(product.MainImage ?? "no-image-placeholder.jpg")"
                                 class="product-thumb"
                                 alt="@product.ProductName"
                                 loading="lazy" />
                        </div>
                        <div class="card-content p-3 d-flex flex-column flex-grow-1">
                            <h6 class="fw-bold mb-2 text-truncate" title="@product.ProductName">
                                @product.ProductName
                            </h6>
                            <div class="mt-auto">
                                <div class="price price-recommended fw-bold mb-3">
                                    @product.Price.ToString("N0") đ
                                </div>
                                <div class="d-flex gap-2 flex-column flex-sm-row">
                                    <a asp-controller="Product"
                                       asp-action="Details"
                                       asp-route-id="@product.ProductId"
                                       class="btn btn-sm btn-outline-primary flex-grow-1">
                                        Chi tiết
                                    </a>
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="m-0 add-to-cart-form">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-sm btn-success flex-grow-1">
                                            <i class="fa-solid fa-cart-plus me-1"></i>Thêm
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

<!-- CSS (giữ nguyên) -->
<style>
    .ifix-card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 14px;
        overflow: hidden;
        transition: all 0.25s ease;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }

        .ifix-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 32px rgba(0,0,0,0.1);
            border-color: #3b82f6;
        }

    .cat-card {
        padding: 1.5rem;
        min-height: 140px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .cat-card.active {
            border: 2px solid #2563eb;
            background-color: #f0f7ff;
        }

    .product-thumb {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: contain;
        padding: 14px;
        background: #f8fafc;
    }

    .price {
        font-size: 1.32rem;
        color: #e11d48;
    }

    .price-recommended {
        color: #15803d;
    }

    .image-wrapper {
        background: #f9fafb;
        border-bottom: 1px solid #e5e7eb;
    }

    .card-content {
        padding: 1rem 1.25rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    /* Responsive adjustments */
    @@media (max-width: 576px) {
        .ifix-card {
            font-size: 0.95rem;
        }

        .product-card h6 {
            font-size: 0.98rem;
            line-height: 1.3;
        }

        .price {
            font-size: 1.18rem;
        }

        .cat-card {
            min-height: 120px;
            padding: 1rem;
        }
    }

    @@media (max-width: 400px) {
        .d-flex.gap-2 {
            flex-direction: column;
            gap: 0.5rem !important;
        }
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.add-to-cart-form').forEach(form => {
                form.addEventListener('submit', function (e) {
                    e.preventDefault(); // Ngăn reload trang

                    const formData = new FormData(form);

                    fetch('/Cart/AddToCart', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message); // Thông báo "Đã thêm vào giỏ hàng"
                        } else {
                            alert(data.message || 'Có lỗi xảy ra khi thêm sản phẩm');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Lỗi kết nối server');
                    });
                });
            });
        });
    </script>
}